#!/bin/sh
#
# sshd        Starts sshd.
#

# Only start ssh if recoveryfs-sshpwd exists
[ -f /bootfs/recoveryfs-sshpwd ] || exit 0

# Make sure the ssh-keygen progam exists
[ -f /usr/bin/ssh-keygen ] || exit 0

umask 077

start() {

	# set the root password to the
	# password specified in /bootfs/recoveryfs-sshpwd
	PASSWD=$(cat /bootfs/recoveryfs-sshpwd | /usr/bin/mkpasswd)
	/bin/sed -i "s#^root::\(.*$\)#root:${PASSWD}:\1#" /etc/shadow

	# Create any missing keys
	/usr/bin/ssh-keygen -A

	# fix permissions
	chmod 600 /etc/ssh/ssh_host_*_key

	printf "Starting sshd: "
	/usr/sbin/sshd
	touch /var/lock/sshd
	echo "OK"
}
stop() {
	printf "Stopping sshd: "
	killall sshd
	rm -f /var/lock/sshd
	echo "OK"
}
restart() {
	stop
	start
}

case "$1" in
  start)
	start
	;;
  stop)
	stop
	;;
  restart|reload)
	restart
	;;
  *)
	echo "Usage: $0 {start|stop|restart}"
	exit 1
esac

exit $?

